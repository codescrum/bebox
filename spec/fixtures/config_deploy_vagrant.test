set :user, "vagrant"
set :application, "pname"
set :deploy_via, :copy
set :scm, :none
set :repository, "."
set :copy_exclude, [".git", ".gitignore", ".gitmodules", "*.box", "boxes"]

set :ssh_options, {
  :keys => '~/.vagrant.d/insecure_private_key',
  :port => '22',
  :forward_agent => 'true'
}

server "server1.pname.test", :web, :app, :db

desc 'Test the vagrant connection by doing issuing a simple echo command'
task :probe, roles: [:web, :app, :db] do
  run 'echo $PATH'
end