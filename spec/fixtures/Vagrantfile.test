# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

	  config.vm.define :node_0 do |node|
	    node.vm.box = "test_0"
	    node.vm.hostname = "server1.pname.test"
	    node.vm.network :public_network, :bridge => 'en0: Ethernet', :auto_config => false
	    node.vm.provision :shell, :inline => "sudo ifconfig eth1 192.168.0.70 netmask 255.255.255.0 up"
	  end
	  config.vm.provider "virtualbox" do |v|
	  	v.memory = 512
	  	v.cpus = 1
	  	v.customize ["modifyvm", :id, "--cpuexecutioncap", "50"]
	  end

end